<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/landingPageImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/landingpage" />

    <android.support.v7.widget.CardView
        android:id="@+id/landingPageCardView"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/landingPageImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp">

        <ImageView
            android:id="@+id/logInBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/landingSecondCard"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/SignUpBTN"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/PrivcySettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>